{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="">
            <h1>{{ details.title }}</h1>
            {% if name == "false" %}
                <h3> by an unknown artist</h3>
            {% else %}
                <h3> by {{ details.artistDisplayName }}</h3>
            {% endif %}
            <img src="{{ details.primaryImage }}" class="image">
            {% if details.repository is defined %}
                <p>Exposed at: {{ details.repository }}</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
